<%# This div connects to your Stimulus controller %>
<div data-controller="context-menu" data-context-menu-target-value="tr">

  <h1>Items from Database</h1>
  <p>Right-click on a table row.</p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <%# The data-id attribute is used by the controller to identify the row %>
        <tr data-id="<%= item.id %>">
          <td><%= item.id %></td>
          <td><%= item.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%# This is the context menu that will be shown %>
  <div data-context-menu-target="menu" class="context-menu" style="display: none;">
    <ul>
      <li>
        <%# The __ID__ in the template will be replaced by the row's data-id %>
        <a href="#" data-url-template="/items/__ID__">View</a>
      </li>
      <li>
        <a href="#" data-url-template="/items/__ID__/edit">Edit</a>
      </li>
      <li>
        <a href="#" data-url-template="/items/__ID__" data-turbo-method="delete" data-turbo-confirm="Are you sure?">Delete</a>
      </li>
    </ul>
  </div>

</div>

<%# Basic styling for the menu %>
<style>
  tr:hover {
    background-color: #f5f5f5;
    cursor: pointer;
  }
  .context-menu {
    position: absolute;
    background-color: white;
    border: 1px solid #ccc;
    box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
    z-index: 1000;
    padding: 5px 0;
    min-width: 150px;
  }
  .context-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .context-menu a {
    display: block;
    padding: 8px 15px;
    text-decoration: none;
    color: #333;
  }
  .context-menu a:hover {
    background-color: #f0f0f0;
  }
</style>

